# secrets.nix.example - Template for agenix configuration
#
# Copy to secrets.nix and add your age public key(s).
# setup.sh will generate this file automatically.
#
# To get your age public key from your SSH key manually:
#   ssh-to-age < ~/.ssh/id_ed25519.pub
#
# Or with nix:
#   cat ~/.ssh/id_ed25519.pub | nix shell nixpkgs#ssh-to-age -c ssh-to-age

{
  "secrets/git-ssh-key.age".publicKeys = [
    # Add your age public key here, e.g.:
    # "age1ql3z7hjy54pw3hyww5ayyfg7zqgvc7w3j2elw8zmrj2kg5sfn9aqmcac8p"
  ];
  "secrets/auth-password.age".publicKeys = [
    # Same key(s) as above
    # "age1ql3z7hjy54pw3hyww5ayyfg7zqgvc7w3j2elw8zmrj2kg5sfn9aqmcac8p"
  ];
}
